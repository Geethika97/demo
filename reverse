#include <stdio.h>
int main()
{
   char str[100], rev[100];
   int start, end, count = 0;

   printf("Input a string\n");
   scanf("%s",&str);

   // Calculating string length

   while (str[count] != '\0')
      count++;

   end = count - 1;

   for (start = 0; start < count; start++) {
      rev[start] = str[end];
      end--;
   }

   rev[start] = '\0';

   printf("%s\n", rev);

   return 0;
}
